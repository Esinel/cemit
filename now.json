{
    "version": 2,
    "builds": [
        {
            "src": "./src/app.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
           "src": "/(.*)",
           "dest": "/src/app.js" 
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        }
    ]
}